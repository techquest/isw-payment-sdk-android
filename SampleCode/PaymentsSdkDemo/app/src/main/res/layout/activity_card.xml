<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.demo.paymentsdkdemo.CardActivity"
    android:background="@drawable/interswitch"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/identifier"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="1234567890"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/amount"
        android:inputType="number"
        android:layout_below="@+id/identifier"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="200"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pan"
        android:inputType="number"
        android:layout_below="@+id/amount"
        android:layout_alignLeft="@+id/amount"
        android:layout_alignStart="@+id/amount"
        android:text="5060990580000217499"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:inputType="numberPassword"
        android:layout_below="@+id/pan"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="1111"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/expiry"
        android:layout_below="@+id/password"
        android:hint="YYMM"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="2004"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay with Card"
        android:id="@+id/cardPay"
        android:onClick="cardPay"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="127dp" />


</RelativeLayout>
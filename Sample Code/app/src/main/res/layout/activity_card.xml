<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.demo.paymentsdkdemo.CardActivity">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/identifier"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="1234567890"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Identifier/Email"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/amount"
        android:inputType="number"
        android:layout_below="@+id/identifier"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="200"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Amount to Pay"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignTop="@+id/amount"

        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/pan"
        android:inputType="number"
        android:layout_below="@+id/amount"
        android:layout_alignLeft="@+id/amount"
        android:layout_alignStart="@+id/amount"
        android:text="5060100000000000012"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Card Number"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:inputType="numberPassword"
        android:layout_below="@+id/pan"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="1111"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Pin"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/expiry"
        android:layout_below="@+id/password"
        android:hint="YYMM"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="2004"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Expiry Date"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/expiry"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay with Card"
        android:id="@+id/cardPay"
        android:layout_below="@+id/expiry"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:onClick="cardPay"/>


</RelativeLayout>